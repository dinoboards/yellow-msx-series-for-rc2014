	include	embinc.asm

	STRUCT WRKAREA
BASE:					; Offset to the base of the data structure
ST_RD_CNT		DB	0	; COUNT OF SECTORS TO BE READ
ST_INDX_LW		DB	1	; SECTOR TO BE READ
ST_INDX_HI		DB	2	; SECTOR TO BE READ 	; MUST BE LESS THAN 65536
ST_DEST_LW		DB	3	; SECTOR DESTINATION ADDRESS (LOW)
ST_DEST_HI		DB	4	; (HIGH)
ST_RD_CND_RQ		DB	5	; NUMBER OF SECTORS REQUESTED
ST_PRESENT		DB	6	; BIT FIELD FOR DETECTED DEVICES (BIT 0 -> COMPACTFLASH/IDE, BIT 1-> MSX-MUSIC NOR FLASH)

	ENDS

	DISPLAY "WRKAREA bytes: ",/D,WRKAREA
